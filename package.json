{
	"name": "psychopy4",
	"productName": "psychopy4",
	"version": "1.0.0",
	"description": "Open-source package for creating experiments in behavioral science.",
	"main": "electron/src/index.cjs",
	"type": "module",
	"scripts": {
		"svelte:dev": "vite dev",
		"svelte:build": "vite build",
		"svelte:preview": "vite preview",
		"svelte:prepare": "svelte-kit sync || echo ''",
		"svelte:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"svelte:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"electron:start": "electron-forge start",
		"electron:package": "electron-forge package",
		"electron:make": "electron-forge make",
		"electron:publish": "electron-forge publish",
		"electron:lint": "echo \"No linting configured\"",
		"velopack:pack": "vpk pack --packId OpenScienceTools.PsychoPy4 --packVersion $npm_package_version --packDir ./out/psychopy4-win32-x64 --mainExe psychopy4.exe --outputDir ./out/releases",
		"velopack:pack:win": "vpk pack --packId OpenScienceTools.PsychoPy4 --packVersion %npm_package_version% --packDir ./out/psychopy4-win32-x64 --mainExe psychopy4.exe --outputDir ./out/releases",
		"build:complete:win": "npm run svelte:build && npm run electron:package && npm run velopack:pack:win",
		"build:complete:mac": "npm run svelte:build && npm run electron:make",
		"dev": "concurrently \"npm run svelte:dev\" \"wait-on http://localhost:5173 && npm run electron:start\""
	},
	"devDependencies": {
		"@electron-forge/cli": "^7.8.3",
		"@electron-forge/maker-deb": "^7.8.3",
		"@electron-forge/maker-dmg": "^7.10.2",
		"@electron-forge/maker-rpm": "^7.8.3",
		"@electron-forge/maker-zip": "^7.8.3",
		"@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
		"@electron-forge/plugin-fuses": "^7.8.3",
		"@electron/fuses": "^1.8.0",
		"@fontsource/fira-mono": "^5.0.0",
		"@neoconfetti/svelte": "^2.0.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"electron": "38.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@monaco-editor/loader": "^1.5.0",
		"electron-maker-velopack": "^1.0.4",
		"express": "^5.1.0",
		"extract-zip": "2.0.1",
		"json-schema-default": "^1.0.2",
		"jsonschema": "^1.5.0",
		"marked": "^16.3.0",
		"monaco-editor": "^0.52.2",
		"path-browserify": "^1.0.1",
		"tar": "^7.5.2",
		"velopack": "^0.0.1350-g3ba32af",
		"xml-formatter": "^3.6.5"
	},
	"optionalDependencies": {
		"@electron-forge/maker-dmg": "*",
		"@rollup/rollup-linux-x64-gnu": "*"
	}
}
